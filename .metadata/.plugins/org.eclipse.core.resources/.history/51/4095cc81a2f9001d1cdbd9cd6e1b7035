package input_data;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		String x;
		int y;
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Digite um texto");
		x = sc.next();
		
		System.out.println("Digite um numero:");
		
		y = sc.nextInt();
		
		System.out.printf("O texto digitado foi: '%s'", x);
		System.out.printf("O n√∫mero digitado foi: '%d'", y);
		
		
		sc.close();
	}

}
